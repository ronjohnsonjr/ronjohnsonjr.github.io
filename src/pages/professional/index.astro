---
import { professionalProfile, siteConfig } from "../../config";
import "../../styles/global.css";

const { hero, differentiators, metrics, serviceLines, caseStudies, testimonials, experience, contact } =
  professionalProfile;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{siteConfig.name} — Fractional Engineering Leadership</title>
    <meta
      name="description"
      content="Fractional engineering leadership, design system strategy, and developer experience consulting with Ron Johnson Jr."
    />
    <link rel="canonical" href="https://ronjohnsonjr.github.io/professional/" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body style="background-color: #0A0A0A; color: #EDF2F4;">
    <header class="border-b backdrop-blur-md" style="border-color: #4B4E53; background-color: rgba(10, 10, 10, 0.9);">
      <nav class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
        <a href="/" class="text-lg font-semibold tracking-tight" style="color: #EDF2F4;">
          {siteConfig.name}
        </a>
        <div class="flex items-center gap-4 text-sm font-medium" style="color: #4B4E53;">
          <a href="#services" class="transition-colors" style="color: #4B4E53;" onmouseover="this.style.color='#EDF2F4';" onmouseout="this.style.color='#4B4E53';">Services</a>
          <a href="#case-studies" class="transition-colors" style="color: #4B4E53;" onmouseover="this.style.color='#EDF2F4';" onmouseout="this.style.color='#4B4E53';">Case studies</a>
          <a href="#experience" class="transition-colors" style="color: #4B4E53;" onmouseover="this.style.color='#EDF2F4';" onmouseout="this.style.color='#4B4E53';">Experience</a>
          <a href="#contact" class="transition-colors" style="color: #4B4E53;" onmouseover="this.style.color='#EDF2F4';" onmouseout="this.style.color='#4B4E53';">Contact</a>
          <a
            href={`mailto:${contact.email}?subject=Discovery%20Call%20with%20Ron`}
            class="inline-flex items-center rounded-full border px-3 py-1.5 font-semibold transition-colors"
            style="border-color: #4B4E53; color: #EDF2F4;"
            onmouseover="this.style.borderColor='#EDF2F4';"
            onmouseout="this.style.borderColor='#4B4E53';"
          >
            Start a conversation
          </a>
        </div>
      </nav>
    </header>

    <main class="pb-24">
      <section class="relative overflow-hidden" style="background-color: #0A0A0A;">
        <div class="absolute inset-0" style="background: linear-gradient(to bottom right, #0A0A0A, #0A0A0A, #0A0A0A);"></div>
        <div class="relative mx-auto flex max-w-5xl flex-col gap-10 px-6 py-20" style="color: #EDF2F4;">
          <div class="max-w-3xl space-y-6">
            <span class="inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs uppercase tracking-[0.2em]" style="background-color: rgba(75, 78, 83, 0.3);">
              <span class="h-2 w-2 rounded-full" style={`background-color: ${siteConfig.accentColor};`}></span>
              {hero.eyebrow}
            </span>
            <h1 class="text-pretty text-4xl font-semibold sm:text-5xl lg:text-6xl" style="color: #EDF2F4;">
              {hero.title}
            </h1>
            <p class="text-pretty text-base leading-7 sm:text-lg" style="color: #4B4E53;">
              {hero.subtitle}
            </p>
            <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
              <a
                href={hero.ctas.primary.href}
                class="inline-flex items-center justify-center rounded-full px-6 py-3 text-sm font-semibold text-white transition-colors"
                style={`background-color: ${siteConfig.accentColor};`}
                onmouseover="this.style.backgroundColor='#D71515';"
                onmouseout={`this.style.backgroundColor='${siteConfig.accentColor}';`}
              >
                {hero.ctas.primary.label}
              </a>
              <a
                href={hero.ctas.secondary.href}
                class="inline-flex items-center justify-center rounded-full border px-6 py-3 text-sm font-semibold transition-colors"
                style="border-color: #4B4E53; color: #EDF2F4;"
                onmouseover="this.style.borderColor='#EDF2F4';"
                onmouseout="this.style.borderColor='#4B4E53';"
              >
                {hero.ctas.secondary.label}
              </a>
            </div>
          </div>
          <div class="grid gap-6 sm:grid-cols-2">
            <div class="rounded-2xl p-6" style="background-color: rgba(75, 78, 83, 0.3);">
              <p class="text-xs uppercase tracking-[0.3em]" style="color: #4B4E53;">Availability</p>
              <p class="mt-2 text-lg font-semibold" style="color: #EDF2F4;">{hero.availability}</p>
            </div>
            <div class="rounded-2xl p-6" style="background-color: rgba(75, 78, 83, 0.3);">
              <p class="text-xs uppercase tracking-[0.3em]" style="color: #4B4E53;">Location</p>
              <p class="mt-2 text-lg font-semibold" style="color: #EDF2F4;">{hero.location}</p>
            </div>
          </div>
        </div>
      </section>

      <section class="mx-auto mt-20 max-w-5xl px-6">
        <div class="grid gap-8 md:grid-cols-3">
          {differentiators.map((item) => (
            <div class="rounded-2xl border p-6 shadow-sm transition-shadow hover:shadow-md" style="border-color: #4B4E53; background-color: #4B4E53;">
              <h2 class="text-lg font-semibold" style="color: #EDF2F4;">{item.title}</h2>
              <p class="mt-3 text-sm leading-6" style="color: #EDF2F4;">{item.description}</p>
            </div>
          ))}
        </div>
      </section>

      <section class="mx-auto mt-20 max-w-5xl px-6">
        <div class="grid gap-6 rounded-3xl border p-8 sm:grid-cols-2" style="border-color: #4B4E53; background-color: #4B4E53;">
          {metrics.map((metric) => (
            <div class="rounded-2xl p-6" style="background-color: #0A0A0A;">
              <p class="text-4xl font-semibold" style="color: #EDF2F4;">{metric.value}</p>
              <p class="mt-2 text-sm uppercase tracking-[0.2em]" style="color: #4B4E53;">{metric.label}</p>
            </div>
          ))}
        </div>
      </section>

      <section id="services" class="mx-auto mt-24 max-w-5xl px-6">
        <div class="space-y-6">
          <div class="space-y-2">
            <h2 class="text-3xl font-semibold" style="color: #EDF2F4;">Ways we can partner</h2>
            <p class="text-base" style="color: #4B4E53;">
              Engagements are tailored around measurable outcomes. Every collaboration blends strategic planning with hands-on support.
            </p>
          </div>
          <div class="space-y-6">
            {serviceLines.map((service) => (
              <div class="rounded-3xl border p-8 shadow-sm transition-shadow hover:shadow-md" style="border-color: #4B4E53; background-color: #4B4E53;">
                <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
                  <h3 class="text-2xl font-semibold" style="color: #EDF2F4;">{service.name}</h3>
                  <span class="inline-flex items-center rounded-full px-4 py-1 text-xs font-semibold uppercase tracking-[0.2em]" style="background-color: #0A0A0A; color: #EDF2F4;">
                    Advisory + Delivery
                  </span>
                </div>
                <p class="mt-4 text-sm leading-6" style="color: #EDF2F4;">{service.description}</p>
                <ul class="mt-6 space-y-2">
                  {service.outcomes.map((outcome) => (
                    <li class="flex items-start gap-3 text-sm" style="color: #EDF2F4;">
                      <span class="mt-1 inline-flex h-2 w-2 flex-shrink-0 rounded-full" style={`background-color: ${siteConfig.accentColor};`}></span>
                      <span>{outcome}</span>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section id="case-studies" class="mx-auto mt-24 max-w-5xl px-6">
        <div class="space-y-10">
          <div>
            <h2 class="text-3xl font-semibold" style="color: #EDF2F4;">Selected collaborations</h2>
            <p class="mt-2 text-base" style="color: #4B4E53;">
              Highlights from recent platform, design system, and developer experience engagements.
            </p>
          </div>
          <div class="space-y-8">
            {caseStudies.map((study) => (
              <div class="rounded-3xl border p-8 shadow-sm transition-shadow hover:shadow-lg" style="border-color: #4B4E53; background-color: #4B4E53;">
                <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                  <h3 class="text-2xl font-semibold" style="color: #EDF2F4;">{study.client}</h3>
                  <span class="text-sm font-medium" style={`color: ${siteConfig.accentColor};`}>Impact Snapshot</span>
                </div>
                <p class="mt-4 text-sm leading-6" style="color: #EDF2F4;">{study.summary}</p>
                <ul class="mt-6 grid gap-3 sm:grid-cols-3">
                  {study.impact.map((item) => (
                    <li class="rounded-2xl p-4 text-sm font-medium" style="background-color: #0A0A0A; color: #EDF2F4;">{item}</li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section class="mx-auto mt-24 max-w-5xl px-6">
        <div class="rounded-3xl border p-8" style="border-color: #4B4E53; background-color: #4B4E53;">
          <h2 class="text-3xl font-semibold" style="color: #EDF2F4;">What partners say</h2>
          <div class="mt-8 grid gap-6 md:grid-cols-2">
            {testimonials.map((testimonial) => (
              <blockquote class="rounded-2xl border p-6 text-sm" style="border-color: #0A0A0A; background-color: #0A0A0A; color: #EDF2F4;">
                <p class="text-pretty leading-6">"{testimonial.quote}"</p>
                <footer class="mt-4 text-xs font-semibold uppercase tracking-[0.2em]" style="color: #4B4E53;">
                  {testimonial.name} • {testimonial.role}
                </footer>
              </blockquote>
            ))}
          </div>
        </div>
      </section>

      <section id="experience" class="mx-auto mt-24 max-w-5xl px-6">
        <div class="space-y-6">
          <div>
            <h2 class="text-3xl font-semibold" style="color: #EDF2F4;">Experience in the work</h2>
            <p class="mt-2 text-base" style="color: #4B4E53;">
              The engagements above are grounded in an operator background building resilient teams and platforms.
            </p>
          </div>
          <div class="relative">
            <div class="absolute left-4 top-0 bottom-0 hidden w-px sm:block" style="background-color: #4B4E53;"></div>
            <div class="space-y-8">
              {experience.map((role) => (
                <div class="relative rounded-3xl border p-8 shadow-sm" style="border-color: #4B4E53; background-color: #4B4E53;">
                  <div class="sm:absolute sm:-left-1 sm:top-8 sm:flex sm:h-4 sm:w-4 sm:-translate-x-1/2 sm:items-center sm:justify-center">
                    <span class="hidden h-3 w-3 rounded-full border-2 sm:inline-block" style="border-color: #4B4E53; background-color: #0A0A0A;"></span>
                  </div>
                  <div class="flex flex-col gap-2 sm:flex-row sm:items-start sm:justify-between">
                    <div>
                      <h3 class="text-xl font-semibold" style="color: #EDF2F4;">{role.title}</h3>
                      <p class="text-sm font-medium" style={`color: ${siteConfig.accentColor};`}>{role.company}</p>
                    </div>
                    <span class="text-xs uppercase tracking-[0.2em]" style="color: #4B4E53;">{role.dateRange}</span>
                  </div>
                  <ul class="mt-4 space-y-2">
                    {role.bullets.map((bullet) => (
                      <li class="flex items-start gap-3 text-sm" style="color: #EDF2F4;">
                        <span class="mt-1 inline-flex h-1.5 w-1.5 flex-shrink-0 rounded-full" style={`background-color: ${siteConfig.accentColor};`}></span>
                        <span>{bullet}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>

      <section id="contact" class="mx-auto mt-24 max-w-4xl px-6">
        <div class="rounded-3xl border p-10" style="border-color: #4B4E53; background-color: #4B4E53; color: #EDF2F4;">
          <div class="flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between">
            <div class="max-w-2xl space-y-4">
              <h2 class="text-3xl font-semibold" style="color: #EDF2F4;">{contact.headline}</h2>
              <p class="text-sm leading-6" style="color: #EDF2F4;">{contact.summary}</p>
            </div>
            <div class="flex flex-col gap-3">
              <a
                href={`mailto:${contact.email}`}
                class="inline-flex items-center justify-center rounded-full px-6 py-3 text-sm font-semibold text-white transition-colors"
                style={`background-color: ${siteConfig.accentColor};`}
                onmouseover="this.style.backgroundColor='#D71515';"
                onmouseout={`this.style.backgroundColor='${siteConfig.accentColor}';`}
              >
                Email {siteConfig.name.split(" ")[0]}
              </a>
              <a
                href={contact.calendly}
                class="inline-flex items-center justify-center rounded-full border px-6 py-3 text-sm font-semibold transition-colors"
                style="border-color: #4B4E53; color: #EDF2F4;"
                onmouseover="this.style.borderColor='#EDF2F4';"
                onmouseout="this.style.borderColor='#4B4E53';"
              >
                Schedule on Calendly
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="border-t py-6" style="border-color: #4B4E53; background-color: #0A0A0A;">
      <div class="mx-auto flex max-w-5xl flex-col items-center justify-between gap-4 px-6 text-sm sm:flex-row" style="color: #4B4E53;">
        <span>© {new Date().getFullYear()} {siteConfig.name}. All rights reserved.</span>
        <div class="flex items-center gap-4">
          <a href="/" class="transition-colors" style="color: #4B4E53;" onmouseover="this.style.color='#EDF2F4';" onmouseout="this.style.color='#4B4E53';">Classic portfolio</a>
          {siteConfig.social?.email && (
            <a
              href={`mailto:${siteConfig.social.email}`}
              class="transition-colors"
              style="color: #4B4E53;"
              onmouseover="this.style.color='#EDF2F4';"
              onmouseout="this.style.color='#4B4E53';"
            >
              {siteConfig.social.email}
            </a>
          )}
        </div>
      </div>
    </footer>
  </body>
</html>
