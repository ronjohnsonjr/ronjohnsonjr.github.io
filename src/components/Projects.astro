---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold" style="color: #EDF2F4;">
              Projects
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.projects.map((project, index) => (
                <div class="group relative">
                  {project.link ? (
                    <a
                      href={project.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class={`block relative p-4 sm:p-6 md:p-8 rounded-xl sm:rounded-2xl border transition-all duration-300 hover:shadow-xl hover:-translate-y-1`}
                      style="background-color: #4B4E53; border-color: #4B4E53;"
                      onmouseover="this.style.backgroundColor='#4B4E53'; this.style.borderColor='#4B4E53';"
                      onmouseout="this.style.backgroundColor='#4B4E53'; this.style.borderColor='#4B4E53';"
                    >
                      {project.link && (
                        <div class="absolute top-4 right-4 sm:top-6 sm:right-6 md:top-8 md:right-8 w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 flex items-center justify-center rounded-full text-white transition-all duration-300"
                          style={`background-color: ${siteConfig.accentColor};`}
                          onmouseover={`this.style.backgroundColor='#FF0000'`}
                          onmouseout={`this.style.backgroundColor='${siteConfig.accentColor}'`}
                        >
                          <svg
                            class="w-4 h-4 sm:w-4.5 sm:h-4.5 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M7 17L17 7M17 7H7M17 7V17"
                            />
                          </svg>
                        </div>
                      )}

                      <div class="space-y-4">
                        <div>
                          <span
                            class="text-sm font-mono"
                            style={{ color: siteConfig.accentColor }}
                          >
                            0{index + 1}
                          </span>
                          <h3 class="text-xl sm:text-2xl font-bold mt-1" style="color: #EDF2F4;">
                            {project.name}
                          </h3>
                        </div>

                        <p
                          class={`text-base sm:text-lg leading-relaxed ${project.link ? "pr-12 sm:pr-14 md:pr-16" : ""}`}
                          style="color: #EDF2F4;"
                        >
                          {project.description}
                        </p>

                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-2">
                            {project.skills.map((skill) => (
                              <span
                                class={`px-2.5 sm:px-3 py-1 sm:py-1.5 text-white rounded-md sm:rounded-lg text-xs sm:text-sm font-medium transition-all duration-300`}
                                style={`background-color: ${siteConfig.accentColor};`}
                                onmouseover={`this.style.backgroundColor='#FF0000'`}
                                onmouseout={`this.style.backgroundColor='${siteConfig.accentColor}'`}
                              >
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </a>
                  ) : (
                    <div
                      class={`block relative p-4 sm:p-6 md:p-8 rounded-xl sm:rounded-2xl border transition-all duration-300`}
                      style="background-color: #4B4E53; border-color: #4B4E53;"
                    >
                      <div class="space-y-4">
                        <div>
                          <span
                            class="text-sm font-mono"
                            style={{ color: siteConfig.accentColor }}
                          >
                            0{index + 1}
                          </span>
                          <h3 class="text-xl sm:text-2xl font-bold mt-1" style="color: #EDF2F4;">
                            {project.name}
                          </h3>
                        </div>

                        <p
                          class={`text-base sm:text-lg leading-relaxed ${project.link ? "pr-12 sm:pr-14 md:pr-16" : ""}`}
                          style="color: #EDF2F4;"
                        >
                          {project.description}
                        </p>

                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-2">
                            {project.skills.map((skill) => (
                              <span
                                class={`px-2.5 sm:px-3 py-1 sm:py-1.5 text-white rounded-md sm:rounded-lg text-xs sm:text-sm font-medium transition-all duration-300`}
                                style={`background-color: ${siteConfig.accentColor};`}
                                onmouseover={`this.style.backgroundColor='#FF0000'`}
                                onmouseout={`this.style.backgroundColor='${siteConfig.accentColor}'`}
                              >
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </div>
                  )}
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
