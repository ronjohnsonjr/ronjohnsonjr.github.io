---
import { siteConfig } from "../config";
const hasCertifications = siteConfig.certifications && siteConfig.certifications.length > 0;
---

{
  hasCertifications && (
    <section id="certifications" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold" style="color: #EDF2F4;">
              Certifications & Badges
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {siteConfig.certifications.map((cert) => (
                <div class="rounded-lg shadow-sm border p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300 flex flex-col"
                  style="background-color: #4B4E53; border-color: #4B4E53;"
                >
                  <div class="flex flex-col items-center text-center mb-4">
                    {cert.badge && (
                      <div class="mb-4">
                        <img
                          src={cert.badge}
                          alt={`${cert.name} badge`}
                          class="w-32 h-32 sm:w-36 sm:h-36 md:w-40 md:h-40 object-contain mx-auto"
                        />
                      </div>
                    )}
                    <h3 class="text-lg sm:text-xl font-semibold mb-2" style="color: #EDF2F4;">
                      {cert.name}
                    </h3>
                    <p
                      class="text-base sm:text-lg mb-2"
                      style="color: #EDF2F4;"
                    >
                      {cert.issuer}
                    </p>
                    {cert.dateRange && (
                      <span class="text-xs sm:text-sm" style="color: #EDF2F4;">
                        {cert.dateRange}
                      </span>
                    )}
                  </div>

                  <div class="mt-auto pt-4 border-t" style="border-color: #4B4E53;">
                    {cert.credentialId && (
                      <p class="text-xs mb-2 text-center" style="color: #EDF2F4;">
                        <span class="font-mono">{cert.credentialId}</span>
                      </p>
                    )}

                    {cert.link && (
                      <a
                        href={cert.link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-sm underline block text-center"
                        style="color: #EDF2F4;"
                        onmouseover="this.style.color='#D71515';"
                        onmouseout="this.style.color='#EDF2F4';"
                      >
                        View credential
                      </a>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

