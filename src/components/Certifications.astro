---
import { siteConfig } from "../config";
const hasCertifications = siteConfig.certifications && siteConfig.certifications.length > 0;
---

{
  hasCertifications && (
    <section id="certifications" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold" style="color: #EDF2F4;">
              Certifications
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.certifications.map((cert) => (
                <div class="rounded-lg shadow-sm border p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300"
                  style="background-color: #3F2311; border-color: #3F2311;"
                >
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                    <div>
                      <h3 class="text-lg sm:text-xl font-semibold" style="color: #EDF2F4;">
                        {cert.name}
                      </h3>
                      <p
                        class="text-base sm:text-lg"
                        style={`color: ${siteConfig.accentColor}`}
                      >
                        {cert.issuer}
                      </p>
                    </div>
                    <span class="text-xs sm:text-sm mt-2 sm:mt-0" style="color: #EDF2F4;">
                      {cert.dateRange}
                    </span>
                  </div>

                  {cert.credentialId && (
                    <p class="text-sm mb-2" style="color: #EDF2F4;">
                      Credential ID: <span class="font-mono">{cert.credentialId}</span>
                    </p>
                  )}

                  {cert.link && (
                    <a
                      href={cert.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-sm underline"
                      style={`color: ${siteConfig.accentColor};`}
                      onmouseover="this.style.color='#D71515';"
                      onmouseout={`this.style.color='${siteConfig.accentColor}';`}
                    >
                      View credential
                    </a>
                  )}
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

