---
import { siteConfig } from "../config";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
const hasCertifications = siteConfig.certifications && siteConfig.certifications.length > 0;
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 hidden md:block transition-all duration-300"
>
  <nav class="max-w-7xl mx-auto px-8 py-4">
    <ul class="flex items-center gap-8 justify-center">
      <li>
        <a
          href="/professional/"
          class="text-slate-300 hover:text-slate-100 transition-colors font-medium"
        >
          Professional
        </a>
      </li>
      <li>
        <a
          href="#about"
          class="text-slate-300 hover:text-slate-100 transition-colors font-medium"
        >
          About
        </a>
      </li>
      {
        hasProjects && (
          <li>
            <a
              href="#projects"
              class="text-slate-300 hover:text-slate-100 transition-colors font-medium"
            >
              Projects
            </a>
          </li>
        )
      }
      {
        hasExperience && (
          <li>
            <a
              href="#experience"
              class="text-slate-300 hover:text-slate-100 transition-colors font-medium"
            >
              Experience
            </a>
          </li>
        )
      }
      {
        hasCertifications && (
          <li>
            <a
              href="#certifications"
              class="text-slate-300 hover:text-slate-100 transition-colors font-medium"
            >
              Certifications
            </a>
          </li>
        )
      }
    </ul>
  </nav>
</header>

<script>
  window.addEventListener("scroll", () => {
    const header = document.getElementById("header");
    if (window.scrollY > 100) {
      header?.classList.add("bg-slate-900/80", "backdrop-blur-sm");
    } else {
      header?.classList.remove("bg-slate-900/80", "backdrop-blur-sm");
    }
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
